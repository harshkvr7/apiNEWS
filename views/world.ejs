<%- include("header.ejs") %>

    <section class="world-header-main">
        <h1>World News</h1>
        <section class="world-header-menu">
            <div class="whm-element"><a href="/world/asia">ASIA</a></div>
            <div class="whm-element"><a href="/world/america">AMERICA</a></div>
            <div class="whm-element"><a href="/world/europe">EUROPE</a></div>
            <div class="whm-element"><a href="/world/africa">AFRICA</a></div>
            <div class="whm-element"><a href="/world/middle-east">MIDDLE EAST</a></div>
        </section>
    </section>

    <div class="world-content-container">
        <% if(locals.keyword){ %>

            <% for (let i=0; i < 100 ; i++){ %>
                <% if(locals.content2.results[i].subsection && content2.results[i].subsection==keyword &&
                    locals.content2.results[i].multimedia[2]){ %>
                    <div class="wcc-element">
                        <div class="wcce-text">
                            <div class="wcce-text-upper">
                                <h2>
                                    <%= content2.results[i].title %>
                                </h2>
                                <h4 class="home-left-std-abs">
                                    <%= content2.results[i].abstract %>
                                </h4>
                            </div>
                            <div class="wcce-text-lower">
                                <a href="<%= content2.results[i].url %>">Read More</a>
                            </div>
                        </div>

                        <div class="wcce-image">
                            <img src="<%= content2.results[i].multimedia[2].url %>">
                        </div>
                    </div>
                    <% } %>
                        <% } %>
                            <% }else{ %>
                                <% for(let i=0 ; i < content.results.length ; i++) {%>
                                    <div class="wcc-element">
                                        <div class="wcce-text">
                                            <div class="wcce-text-upper">
                                                <h2 class="wcce-subsection">
                                                    <%= content.results[i].subsection.charAt(0).toUpperCase() +
                                                        content.results[i].subsection.slice(1) %>
                                                </h2>
                                                <h2>
                                                    <%= content.results[i].title %>
                                                </h2>
                                                <h4 class="home-left-std-abs">
                                                    <%= content.results[i].abstract %>
                                                </h4>
                                            </div>
                                            <div class="wcce-text-lower">
                                                <a href="<%= content.results[i].url %>">Read More</a>
                                            </div>
                                        </div>
                                        <% if (locals.content.results[i].multimedia) { %>
                                            <div class="wcce-image">
                                                <img src="<%= content.results[i].multimedia[1].url %>">
                                            </div>
                                            <% } %>
                                    </div>
                                    <% } %>
                                        <% } %>
    </div>