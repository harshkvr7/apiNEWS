    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        $(".header-main-text").click(function () { 
            window.location.replace("/"); 
        });
        $(".header-menu-icon").click(function(){
            $(".header-menu-overmenu").css("display","flex")
        })
        $(".overmenu-close-icon").click(function(){
            $(".header-menu-overmenu").css("display","none")
        })
        $(".dark-mode-btn").click(function(){
            $(".dark-mode-btn").css("display","none");
            $(".light-mode-btn").css("display","flex");
            $("body").css("filter","invert(100%)");
            $("body").css("background-color","black");
            $("body img").css("filter","invert(100%)");
        })
        $(".light-mode-btn").click(function(){
            $(".light-mode-btn").css("display","none");
            $(".dark-mode-btn").css("display","flex");
            $("body img").css("filter","invert(0%)");
            $("body").css("filter","invert(0%)");
            $("body").css("background-color","white");
        })
    </script>
</body>

</html>